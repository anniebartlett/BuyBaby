<div class="container text-center ">
  <div class="row d-flex justify-content-center">
    <div class="col-12 mt-5 text-center">
      <h1 class="main mb-3">Thank you for your order!</h1>
      <h4 class="order-conf">Order # <%= @order.id %></h4>
      <h4 class="order-conf">Delivered via: <span class="order-option"><%= @order.delivery_option %></span></h4>
      <h4 class="order-conf">Paid by: <span class="order-option"><%= @order.payment_option %></span></h4>
      <br>
      <h4>A confirmation was sent to <%= @order.user.email %></h4>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8 mt-5 ">
      <h3 class="mb-3 order-conf"> Order summary: </h3>
      <% @order.product_orders.each do |item| %>
      <div class="d-flex flex-column">
        <div class="card-product border-rounded">
          <% item.product.photos.each_with_index do |photo, index| %>
          <%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill, gravity: :center %>
          <% end %>
          <div class="card-product-infos text-left">
            <h5><%= item.product.name %></h5>
            <p><%= item.product.description %></p>
            <p><%= item.product.sale_type %></p>
            <p>£<%= item.product.price_cents %></p>
          </div>
        </div>
      </div>
      <% end %>
      <hr>
      <h4>Total: £<%= @order.total_price %></h4>
      <%= link_to 'Back to Accounts', my_account_path, class: "btn btn-primary btn-lg text-white mb-5 ml-1" %>
    </div>
  </div>
</div>
